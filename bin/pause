#!/bin/sh

usage()
{
cat << _USAGE_
Usage: $(basename $0) [--help]

Pause command prompt until a key is pressed.
_USAGE_
}

# Get command line options
while [ "$1" ]; do
    case "$1" in
        -h | --help) usage
            exit 0 ;;
        *) shift ;;
    esac
done

# Wait for a key press
ukey=""
read -r -n 1 -p 'Press any key to continue ... ' ukey

dkey=$(printf "$ukey" | od -An -t uC | awk '{ print $1 }')
[ -z "$dkey" ] && dkey=0

# Print newline if pressed key is not '\n' or '\r'
if [ $dkey -ne 10 ] && [ $dkey -ne 13 ]; then
    printf '\n'
fi

