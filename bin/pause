#!/bin/sh

usage()
{
cat << _USAGE_
Usage: $(basename $0) [--help]

Pause command prompt until a key is pressed.
_USAGE_
}

# Get command line options
while [ "$1" ]; do
    case "$1" in
        -h | --help) usage
            exit 0 ;;
        *) usage
            printf "%b\n" "$errmsg: invalid command line option, $1"
            exit 1 ;;
    esac
done

# Wait for a key press
ukey=""
read -r -n 1 -p 'Press any key to continue ... ' ukey

