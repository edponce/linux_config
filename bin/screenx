#!/bin/bash 

usage()
{
    echo
    echo "Usage: $(basename $0) [--help]"
    echo
    echo "Wrapper over screen program that clear terminal screen after session ends."
    echo
}

# Get command line options
while [ "$1" ]; do
    case "$1" in
        -h | --help)
        usage
        exit 0
        ;;
        *)
        args="$@"
        shift $# 
        ;;
    esac
done

# Run 
cmd="screen $args"
eval "$cmd"
clear

unset args cmd

