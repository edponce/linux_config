#!/bin/bash

. $HOME/bin/error_utils
. $HOME/bin/custom_utils

usage()
{
cat << _EOF_
Usage: $(basename $0) [--help] [--mirror] [--protocol PROTOCOL] [--direction DIRECTION_ID]

Change monitor configuration.

For secondary monitor protocol, default is extended screen.
Direction ID is not used for primary protocol or if mirror option is set.

Protocols:
 *0 -> Primary (LVDS, DP, VGA, HDMI)
  1 -> Secondary (DP, VGA, HDMI)

Direction IDs for extended mode:
 *0 -> left
  1 -> above
  2 -> right
  3 -> below
_EOF_
}

# Default options
mirror=0
mon_proto=0
direction_id=0

# Get command line options
while [ "$1" ]; do
    case "$1" in
        -h | --help)
            usage
            exit 0
            ;;
        -m | --mirror)
            mirror=1
            shift
            ;;
        -p | --protocol)
            mon_proto=$2
            shift 2
            ;;
        -d | --direction)
            direction_id=$2
            shift 2
            ;;
        *)
            usage
            error_msg "invalid command line option, $1" 1
            ;;
    esac
done

# Validate
if [ $mon_proto -lt 0 ] || [ $mon_proto -gt 1 ]; then
    error_msg "invalid protocol value" 1
fi

if [ $direction_id -lt 0 ] || [ $direction_id -gt 3 ]; then
    error_msg "invalid direction value" 1
fi

# Get connected monitors
connected_monitors 2
primary_opts="--output ${monitors_select[0]} --primary --auto --pos 0x0 --rotate normal"
secondary_opts=
if [ ${#monitors_select[@]} -gt 1 ]; then
    secondary_opts="--output ${monitors_select[1]} --off"
else
    if [ $mon_proto -eq 1 ]; then
        error_msg "Secondary monitor was not detected" 1
    fi
fi

# Select monitor protocol
case $mon_proto in
    0) # Restore windows in primary monitor
        #window_restore
        ;;
    1) # Configure secondary monitor
        # Select monitor relative position
        if [ $mirror -eq 0 ]; then
            # Extended mode
            case $direction_id in
                0) rel_pos="--left-of ${monitors_select[0]}" ;;
                1) rel_pos="--above ${monitors_select[0]}" ;;
                2) rel_pos="--right-of ${monitors_select[0]}" ;;
                3) rel_pos="--below ${monitors_select[0]}" ;;
            esac
        elif [ $mirror -eq 1 ]; then
            # Mirror mode
            rel_pos="--pos 0x0"
        fi
        secondary_opts="--output ${monitors_select[1]} --auto $rel_pos --rotate normal"
        ;;
esac

# Get disconnected monitors
connected_monitors 3
disconnect_opts=
for each in "${monitors_select[@]}"; do
    disconnect_opts+="--output $each --off "
done

# Run
xrandr $primary_opts $secondary_opts $disconnect_opts

# Move mouse to center of screen
case $direction_id in
    0 | 3) mouse_teleport -s 1 -d 4 ;;
    1 | 2) mouse_teleport -s 2 -d 4 ;;
esac

exit 0

