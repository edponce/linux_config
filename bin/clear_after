#!/bin/bash 

usage()
{
    echo
    echo "Usage: $(basename $0) [--help] \"COMMAND\""
    echo
    echo "Wrapper to invoke a command and clear terminal after its completion."
    echo
}

# Default options
cmd=

# Get command line options
while [ "$1" ]; do
    case "$1" in
        -h | --help)
            usage
            exit 0
            ;;
        *)
            cmd="$@"
            shift $# 
            ;;
    esac
done

# Validate
if [ -z "$cmd" ]; then
    echo "Error: no command was specified."
    exit 1
fi

# app [args] 
which $(echo "$cmd" | awk '{ print $1}') > /dev/null 2>&1
if [ $? -ne 0 ]; then
    echo "Error: command '$cmd' was not found."
    exit 1
fi

# Run 
$cmd
tput clear

exit 0

